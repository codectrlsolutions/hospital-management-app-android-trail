<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_select_image_using"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textSize="@dimen/normal_text"
        android:text="Select image using"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_Gallery"
        android:padding="16dp"
        android:layout_below="@+id/textView_select_image_using"
        android:layout_toLeftOf="@+id/textView_Camera"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/text_color_blue"
        android:textStyle="bold"
        android:text="Gallery"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_select_image_using"
        android:padding="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView_Camera"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/text_color_blue"
        android:textStyle="bold"
        android:text="Camera"/>


</RelativeLayout>