<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactUsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_toolBar">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView_back_arrow"
                android:layout_marginEnd="5dp"
                android:src="@drawable/baseline_arrow_back"
                android:contentDescription="Back arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_hi"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:text="Contact Us"/>
        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_name"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/cardView_toolBar"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:text="Name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_name"
        android:layout_below="@+id/textView_name"
        android:textColor="@color/text_color"
        android:paddingHorizontal="16dp"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_email_address"
        android:layout_below="@+id/editText_name"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:text="Email Address"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_email_address"
        android:layout_below="@+id/textView_email_address"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_phoneNumber"
        android:layout_below="@+id/editText_email_address"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:text="Phone Number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_phone_number"
        android:layout_below="@+id/textView_phoneNumber"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:inputType="phone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_your_query_topic"
        android:layout_below="@+id/editText_phone_number"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:text="Your Query Topic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_your_query_topic"
        android:layout_below="@+id/textView_your_query_topic"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_message"
        android:layout_below="@+id/editText_your_query_topic"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:text="Message"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_message"
        android:layout_below="@+id/textView_message"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_color"
        android:textStyle="normal"
        android:textSize="@dimen/normal_text"
        android:lines="3"
        android:inputType="text"/>

    <TextView
        android:id="@+id/textView_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/text_color"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Submit"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/button_background"/>


</RelativeLayout>