                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:elevation="@dimen/card_elevation"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:background="@color/powder_blue"
                            android:src="@drawable/cardiologist_removebg_preview"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cardiologist"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/cardView_search_bar_section_12"
                    android:padding="10dp"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:layout_weight="1"
                    android:elevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:background="@color/robbin_egg_blue"
                            android:src="@drawable/dermatologist_removebg_preview"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dermatologist"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/cardView_search_bar_section_13"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    android:elevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:background="@color/seafoam_green"
                            android:src="@drawable/neurologist_removebg_preview"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neurologist"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>

